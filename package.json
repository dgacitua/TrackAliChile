{
  "name": "trackalichile",
  "author": "Daniel Gacitua",
  "license": "AGPL-3.0",
  "version": "2.0.0",
  "description": "AliExpress Standard Shipping and CorreosChile Parcel Tracker",
  "main": "server/main.js",
  "private": true,
  "scripts": {
    "start": "npm run clean && concurrently \"npm run server\" \"npm run client\"",
    "client": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "server": "cross-env NODE_ENV=development nodemon ./server/main.js --exec babel-node --presets env",
    "build": "npm run clean && npm run build-server && npm run build-client",
    "build-client": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build-server": "cross-env NODE_ENV=production babel ./server -d ./dist/server -s --presets env",
    "deploy": "npm run deploy-server && npm run deploy-client",
    "deploy-client": "http-server ./dist/client -p 8080",
    "deploy-server": "node ./dist/server/index.js",
    "clean": "shx rm -rf ./dist && shx mkdir -p ./dist/server ./dist/client",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "body-parser": "^1.18.2",
    "cheerio": "^1.0.0-rc.2",
    "correos-chile": "^1.2.4",
    "express": "^4.16.2",
    "he": "^1.1.1",
    "moment-timezone": "^0.5.14",
    "requestretry": "^1.12.2",
    "vue": "^2.5.13",
    "vue-material": "^1.0.0-beta-7",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "http-server": "^0.10.0",
    "nodemon": "^1.13.2",
    "shx": "^0.2.2",
    "style-loader": "^0.19.1",
    "vue-loader": "^13.6.1",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  }
}
